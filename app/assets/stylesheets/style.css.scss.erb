/***** global start *****/
body {
    background: url(<%= asset_path 'pattern.jpg' %>);
    text-align: left;
    font-family: 'Lato', Arial, sans-serif;
    color: #555;
    font-weight: 400;
    border-top: 2px solid #e75967;
}

strong {
    font-weight: 700;
}

body a:hover {
    background: none;
    text-decoration: underline;
    color: blue;
}

header a:hover {
    text-decoration: none;
    background: url(<%= asset_path 'pattern.jpg' %>);
    color: #e75967;
}

::-moz-selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}

::selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}

/***** global start *****/

/***** header start *****/
.logo h1 {
    margin-top: 7px;
    padding-left: 50px;
    font-family: 'Lobster', cursive;
    font-size: 38px;
    font-weight: 400;
    color: #555;
}

.logo h1 span {
    color: #e75967;
}

.logo a {
    color: #555;
    text-decoration: none;
    -o-transition: all .2s;
    -moz-transition: all .2s;
    -webkit-transition: all .2s;
    -ms-transition: all .2s;
}

.logo a:hover {
    color: #e75967;
}

.call-us {
    font-size: 18px;
    text-align: right;
}

.call-us p {
    margin-top: 18px;
    padding-right: 50px;
}

.call-us p span {
    color: #888;
}

#navbar_area {
    float: right;
}

#navbar_area .container {
    width: auto;
}

.dropdown-menu {
    background: url(<%= asset_path 'pattern.jpg' %>);
}

.dropdown-menu li {
    text-align: center;
}

/***** header end *****/

/***** main board start *****/

.main_board {
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

.inner-bg {
    padding: 15px 0 15px 0;
    overflow: auto;
    zoom: 1;
    background: url(<%= asset_path 'pattern-3.png' %>);
    -moz-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    -webkit-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
}

.main_board h2 {
    font-size: 40px;
    font-weight: 700;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

.main_board p {
    margin-top: 20px;
    font-size: 18px;
    line-height: 36px;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

#board_detail_show {
    margin: 0;
    padding: 0;
}

#close_detail_show {

}

.arrow_button {
    position: relative;
    display: block;
    margin-top: 90px;
    height: 50px;
    width: 50px
}

.arrow_button:hover {
    cursor: pointer;
}

.detail_index {
    margin: 0;
    padding: 0;
    height: 300px;
}

.detail_life,
.detail_work,
.detail_tourist,
.detail_research {
    display: none;
    margin: 0;
    padding: 0;
    /*height: 300px;*/
    background: url(<%= asset_path 'pattern.jpg' %>);
    color: #000000;
}

.close_detail_btn {
    margin-left: 5px;
    margin-right: 5px;
}

.detail_container {
    height: 250px;
    border: 1px solid;
    padding: 10px;
    text-align: left;
    overflow: hidden
}

.left_button {
    background: none repeat scroll 0 0 #222222;
    border: 3px solid #FFFFFF;
    border-radius: 23px;
    color: #FFFFFF;
    font-size: 60px;
    font-weight: 100;
    height: 40px;
    left: 15px;
    line-height: 30px;
    margin-top: -20px;
    opacity: 0.5;
    position: absolute;
    text-align: center;
    top: 40%;
    width: 40px;
}

.item {
    /*margin-top: 10px;*/
    text-shadow: 0 1px 5px rgba(0, 0, 0, .1);
}

.item .item_house,
.item .item_work,
.item .item_happy,
.item .item_research {
    display: inline-block;
    width: 160px;
    height: 140px;
    margin: 0 10px;
    padding-top: 20px;

    font-size: 18px;
    overflow: hidden;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    cursor: pointer;
}

.item .item_house {
    background: url(<%= asset_path 'backgrounds/house.jpg' %>);
    background-size: 100% 100%;
}

.item .item_work {
    background: url(<%= asset_path 'backgrounds/work.jpg' %>);
    background-size: 100% 100%;
}

.item .item_happy {
    background: url(<%= asset_path 'backgrounds/tourist.jpg' %>);
    background-size: 100% 100%;
}

.item .item_research {
    background: url(<%= asset_path 'backgrounds/research.jpg' %>);
    background-size: 100% 100%;
}

.item .total_count {
    display: inline-block;
    width: 100px;
    height: 65px;
    padding-top: 35px;
    font-size: 50px;
    overflow: hidden;
}

.item .total_count span {
    display: none
}

.item .rectangle {
    width: 160px;
    height: 140px;
    margin-top: 23px;
    overflow: hidden;

}

.item .circle {
    width: 160px;
    height: 160px;
    margin-top: -100px;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    background: #666666 url(<%= asset_path 'pattern-2.png' %>);
    opacity: 0.8;
    filter: alpha(opacity=20); /* For IE8 and earlier */
}

.item .title {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
}

.item .title_posts {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
    display: none;
}

.item .item_house:hover,
.item .item_work:hover,
.item .item_happy:hover,
.item .item_research:hover {
    background: #e75967 url(<%= asset_path 'pattern-2.png' %>);
    text-shadow: none;
}

.item .days,
.item .hours,
.item .minutes,
.item .seconds {
    font-size: 80px;
    line-height: 90px;
}

/***** foot *****/

.social {
    margin-top: 30px;
    padding-bottom: 30px;
    text-align: center;
}

.social a {
    display: inline-block;
    width: 48px;
    height: 48px;
    margin: 3px;
}

.social a.github {
    background: url(<%= asset_path 'social-icons/github.png' %>);
}

.social a.cnblogs {
    background: url(<%= asset_path 'social-icons/cnblogs.png' %>);
}

.social a.email {
    background: url(<%= asset_path 'social-icons/email.png' %>);
}

.social a.resume {
    background: url(<%= asset_path 'social-icons/resume.png' %>);
}

/***** User List *****/
#user_list_title {
    text-align: center
}

#user_table_list a {
    color: blue;
    text-decoration: underline;
}

#user_list_container .page-header,
#user_detail_container .page-header,
#user_new_container .page-header,
#user_edit_container .page-header {
    text-align: center;
}

#user_list_container {
    padding-top: 10px;
}

#i18n_locale {
    width: 100px;
    margin-top: 6px;
}

.user_new_edit_form .field_with_errors {
    padding: 0;
    background-color: transparent;
    display: block;
}

.user_new_edit_form .field_with_errors span {
    display: inline;
}

.user_new_edit_form .control-group span {
    display: none;
}

#user_list_container .dataTables_length select {
    width: 60px;
}

#user_new_edit_form .alert-warning button {
    text-align: center;
    margin-left: 50px;
    margin-right: 50px
}

.carousel {
    position: relative;

    margin-bottom: 20px;
    width: 100%;
    line-height: 1;
}

.bs-docs-life {
    position: relative;
    margin: 5px 0;
    padding: 10px 19px 14px;
    background-color: #fff;
    border: 1px solid #ddd;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    height: 520px;
}

.life_detail_btn {
    list-style: none outside none;
    margin: 0;
    position: absolute;
    left: 15px;
    top: 15px;
    z-index: 5;
}

.carousel-inner {
    height: 520px;
}

#loading {
    position: fixed;
    _position: absolute;
    top: 50%;
    left: 50%;
    width: 124px;
    height: 124px;
    overflow: hidden;
    background: url(<%= asset_path 'loaderc.gif' %>) no-repeat;
    z-index: 7;
    margin: -62px 0 0 -62px;
}

#life_detail_container a,
#life_detail_container.hero-unit {
    padding-top: 10px;
}

.life_post_index_wrapper .pagination {
    text-align: right;
    margin-bottom: 0;
}

.carousel-control:hover, .life_post_index_wrapper.carousel-control:focus {
    border: 3px solid #808080;
    color: white;
    background-color: rgba(0, 0, 0, 0.75);
}

.left.photo-control{
    left: 15px;
}

.right.photo-control{
    right: 15px;
}
.photo-control:hover{
    border: 3px solid #808080;
    color: white;
    background-color: rgba(0, 0, 0, 0.75);
}
.photo-control{
    position: absolute;
    top: 40%;

    width: 40px;
    height: 40px;
    margin-top: -20px;
    font-size: 60px;
    font-weight: 100;
    line-height: 30px;
    color: white;
    text-align: center;
    background: #222222;
    border: 3px solid white;
    -webkit-border-radius: 23px;
    -moz-border-radius: 23px;
    border-radius: 23px;
    opacity: 0.5;
}

.main_board .carousel-inner > .item > img {
    display: inline;
}

.main_board .carousel-inner > .item {
    text-align: center;
    vertical-align: middle;
    height: 100%;
}

.index_image_round {
    width: 100%;
}

.index_image_wrapper {
    height: 130px;
    overflow: hidden;
}

.image_index_body, .image_index_title {
    overflow: hidden;
    display: inline-block;
    width: 100%;
    height: 15px;
    margin: 5, 0, 0, 0;
    padding: 0;
}

.image_index_title {
    height: 35px;
    margin: 0;
}

.life_detail_container .life_detail_page_title {
    float: none;
}

#fans-map {
    height: 500px;
    margin-top: 20px;
    margin-bottom: 20px;
}

#board_detail_show > .hero-unit > .row {
    margin: 0;
}

#board_detail_show .detail_tourist {
    background: rgb(80, 80, 80);
}

#board_detail_show .jvectormap-zoomin,
#board_detail_show .jvectormap-zoomout {
    background: none repeat scroll 0 0 #000000;
}

#fans-home .btn-primary {
    color: #ffffff;
}

#jvectormap-label {
    display: none;
    left: 129px;
    top: 64px;
}

#my-awesome-dropzone {
    display: none;
}

.image_wrapper_manage {
    display: inline-block;
    width: 200px;
    height: 200px;
    overflow: hidden;
    background-color: #ffffff;
    text-align: center;
    position: relative;
}


.image_wrapper_manage img {
    width: 100%;
}

.image_wrapper_remove {
    border: 1px solid;
    position: absolute;
    right: 5px;
    bottom: 5px;
    background-color: #ffffff;
    display: none;
}

.image_wrapper_remove:hover {
    cursor: pointer;
    width: 15px;
    height:15px;
    background-color: #808080;
}

.thumbnail {
    background: url("<%= asset_path 'pattern.jpg' %>") repeat scroll 0 0
}

.logo {
    margin-top: 5px;
}

.header-logo {
    float: left;
}
#fans-home .header-li{
    display: inline-block;
}

.item-area {
    box-sizing: initial;
}

#fans-home .header.row{
    margin-left: -20px;
}

.bootstrap-form{
    margin: 10px 50px;
}

#danmuarea {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: #222;
    z-index: 101;
    margin-left: auto;
    margin-right: auto;

}

#danmu{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    color: white;
    font-size: 24px;
    overflow: hidden;
}

#work-panel-close{
    position: fixed;
    right: 0;
    z-index: 102;
}
