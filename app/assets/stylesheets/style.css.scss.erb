/***** global start *****/
body {
    background: url(../images/pattern.jpg);
    text-align: left;
    font-family: 'Lato', Arial, sans-serif;
    color: #555;
    font-weight: 400;
    border-top: 2px solid #e75967;
}

strong {
    font-weight: 700;
}

a:hover {
    text-decoration: none;
}

::-moz-selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}

::selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}
/***** global start *****/

/***** header start *****/
.logo h1 {
    margin-top: 7px;
    padding-left: 50px;
    font-family: 'Lobster', cursive;
    font-size: 38px;
    font-weight: 400;
    color: #555;
}

.logo h1 span {
    color: #e75967;
}

.logo a {
    color: #555;
    text-decoration: none;
    -o-transition: all .2s;
    -moz-transition: all .2s;
    -webkit-transition: all .2s;
    -ms-transition: all .2s;
}

.logo a:hover {
    color: #e75967;
}

.call-us {
    font-size: 18px;
    text-align: right;
}

.call-us p {
    margin-top: 18px;
    padding-right: 50px;
}

.call-us p span {
    color: #888;
}

#navbar_area {
    float: right;
}

.dropdown-menu {
    background: url(../images/pattern.jpg);
}

.dropdown-menu li{
    text-align: center;
}
/***** header end *****/


/***** main board start *****/

.main_board {
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

.inner-bg {
    padding: 15px 0 15px 0;
    overflow: auto;
    zoom: 1;
    background: url(../images/pattern-3.png);
    -moz-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    -webkit-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
}

.main_board h2 {
    font-size: 40px;
    font-weight: 700;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

.main_board p {
    margin-top: 20px;
    font-size: 18px;
    line-height: 36px;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

#board_detail_show {
    margin: 0;
    padding: 0;
}

#close_detail_show {

}
.arrow_button {
    position: relative;
    display: block;
    margin-top: 90px;
    height:50px;
    width: 50px
}
.arrow_button:hover{
    cursor: pointer;
}
.detail_index {
    margin: 0;
    padding: 0;
    height: 300px;
}

.detail_life,
.detail_work,
.detail_tourist,
.detail_research {
    display: none;
    margin: 0;
    padding: 0;
    height: 300px;
    background: url(../images/pattern.jpg);
    color: #000000;
}
#close_detail_btn {
    margin-left: 5px;
    margin-right: 5px;
}

.left_button {
    background: none repeat scroll 0 0 #222222;
    border: 3px solid #FFFFFF;
    border-radius: 23px;
    color: #FFFFFF;
    font-size: 60px;
    font-weight: 100;
    height: 40px;
    left: 15px;
    line-height: 30px;
    margin-top: -20px;
    opacity: 0.5;
    position: absolute;
    text-align: center;
    top: 40%;
    width: 40px;
}

.item {
    margin-top: 10px;
    text-shadow: 0 1px 5px rgba(0, 0, 0, .1);
}

.item .item_house,
.item .item_work,
.item .item_happy,
.item .item_research {
    display: inline-block;
    width: 160px;
    height: 140px;
    margin: 0 10px;
    padding-top: 20px;

    font-size: 18px;
    overflow: hidden;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    cursor: pointer;
}

.item .item_house {
    background: url(../images/backgrounds/house.jpg);
    background-size: 100% 100%;
}

.item .item_work {
    background: url(../images/backgrounds/work.jpg);
    background-size: 100% 100%;
}

.item .item_happy {
    background: url(../images/backgrounds/tourist.jpg);
    background-size: 100% 100%;
}

.item .item_research {
    background: url(../images/backgrounds/research.jpg);
    background-size: 100% 100%;
}

.item .total_count {
    display: inline-block;
    width: 100px;
    height: 30px;
    padding-top: 35px;
    font-size: 60px;
    overflow: hidden;
}

.item .total_count span {
    display: none
}

.item .rectangle {
    width: 160px;
    height: 140px;
    margin-top: 23px;
    overflow: hidden;

}

.item .circle {
    width: 160px;
    height: 160px;
    margin-top: -110px;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    background: #666666 url(../images/pattern-2.png);
    opacity: 0.8;
    filter: alpha(opacity=20); /* For IE8 and earlier */
}

.item .title {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
}

.item .title_posts {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
    display: none;
}

.item .item_house:hover,
.item .item_work:hover,
.item .item_happy:hover,
.item .item_research:hover {
    background: #e75967 url(../images/pattern-2.png);
    text-shadow: none;
}

.item .days,
.item .hours,
.item .minutes,
.item .seconds {
    font-size: 80px;
    line-height: 90px;
}

/***** Content *****/

.subscribe {
    margin-top: 30px;
    text-align: center;
}

.subscribe h3 {
    font-size: 32px;
    font-weight: 400;
    color: #4d4d4d;
    line-height: 40px;
    text-transform: uppercase;
    text-shadow: 1px 2px 1px #fff;
}

.subscribe p {
    font-size: 18px;
    font-weight: 400;
    line-height: 36px;
}

.subscribe form {
    margin-top: 24px;
}

.subscribe form input {
    width: 310px;
    height: 46px;
    margin: 0;
    padding: 0 10px;
    background: #fff;
    font-family: 'Lato', Arial, sans-serif;
    font-size: 18px;
    line-height: 46px;
    color: #888;
    border: 0;
    -moz-border-radius: 0;
    -webkit-border-radius: 0;
    border-radius: 0;
    -moz-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
    -webkit-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
}

.subscribe form input:focus {
    -moz-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
    -webkit-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15);
}

.subscribe form input:-moz-placeholder {
    color: #888;
}

.subscribe form input:-ms-input-placeholder {
    color: #888;
}

.subscribe form input::-webkit-input-placeholder {
    color: #888;
}

.subscribe form button {
    width: 130px;
    height: 46px;
    margin: 0;
    padding: 0;
    background: #e75967;
    border: 0;
    font-family: 'Lato', Arial, sans-serif;
    font-size: 18px;
    line-height: 46px;
    color: #fff;
    text-transform: uppercase;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
    -moz-border-radius: 0;
    -webkit-border-radius: 0;
    border-radius: 0;
    -moz-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .25);
    -webkit-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .25);
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .25);
    -o-transition: all .3s;
    -moz-transition: all .3s;
    -webkit-transition: all .3s;
    -ms-transition: all .3s;
}

.subscribe form button:hover {
    background: #e75967;
    color: #fff;
}

.subscribe form button:active {
    background: #e75967;
    color: #fff;
}

.success-message, .error-message {
    font-size: 18px;
}

.error-message {
    color: #e75967;
}

.social {
    margin-top: 30px;
    padding-bottom: 30px;
    text-align: center;
}

.social a {
    display: inline-block;
    width: 48px;
    height: 48px;
    margin: 3px;
}

.social a.facebook {
    background: url(../images/social-icons/facebook.png);
}

.social a.twitter {
    background: url(../images/social-icons/twitter.png);
}

.social a.dribbble {
    background: url(../images/social-icons/dribbble.png);
}

.social a.googleplus {
    background: url(../images/social-icons/googleplus.png);
}

.social a.pinterest {
    background: url(../images/social-icons/pinterest.png);
}

.social a.flickr {
    background: url(../images/social-icons/flickr.png);
}

/***** Media Queries *****/

@media (min-width: 768px) and (max-width: 979px) {

    .logo h1 {
        padding-left: 0;
    }

    .call-us p {
        padding-right: 0;
    }

    .item .item_house,
    .item .item_work,
    .item .item_happy,
    .item .item_research {
        width: 140px;
        height: 120px;
        margin: 0 7px;
        padding-top: 20px;
        -moz-border-radius: 70px;
        -webkit-border-radius: 70px;
        border-radius: 70px;
    }

    .item .days,
    .item .hours,
    .item .minutes,
    .item .seconds {
        font-size: 60px;
        line-height: 70px;
    }

}

@media (max-width: 767px) {

    body {
        padding-left: 0;
        padding-right: 0;
    }

    .logo h1 {
        padding-left: 0;
        text-align: center;
    }

    .call-us {
        padding-bottom: 7px;
        text-align: center;
    }

    .call-us p {
        padding-right: 0;
    }

    .inner-bg {
        padding: 45px 0 50px 0;
    }

    .main_board h2 {
        font-size: 36px;
        padding: 0 20px;
    }

    .main_board p {
        padding: 0 20px;
    }

    .item .item_house,
    .item .item_work,
    .item .item_happy,
    .item .item_research {
        width: 140px;
        height: 120px;
        margin: 7px;
        padding-top: 20px;
        -moz-border-radius: 70px;
        -webkit-border-radius: 70px;
        border-radius: 70px;
    }

    .item .days,
    .item .hours,
    .item .minutes,
    .item .seconds {
        font-size: 60px;
        line-height: 70px;
    }

    .subscribe h3 {
        padding: 0 20px;
        font-size: 28px;
    }

    .subscribe p {
        padding: 0 20px;
    }

}

@media (max-width: 480px) {

    .subscribe form {
        padding: 0 20px;
    }

    .subscribe form input {
        width: 90%;
    }

    .subscribe form button {
        width: 90%;
        margin-top: 10px;
    }

}

