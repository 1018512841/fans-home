/***** global start *****/
body {
    background: url(../images/pattern.jpg);
    text-align: left;
    font-family: 'Lato', Arial, sans-serif;
    color: #555;
    font-weight: 400;
    border-top: 2px solid #e75967;
}

strong {
    font-weight: 700;
}

.container a:hover {
    text-decoration: none;
    background: url(../images/pattern.jpg);
    color: #e75967;
}

::-moz-selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}

::selection {
    background: #e75967;
    color: #fff;
    text-shadow: none;
}
/***** global start *****/

/***** header start *****/
.logo h1 {
    margin-top: 7px;
    padding-left: 50px;
    font-family: 'Lobster', cursive;
    font-size: 38px;
    font-weight: 400;
    color: #555;
}

.logo h1 span {
    color: #e75967;
}

.logo a {
    color: #555;
    text-decoration: none;
    -o-transition: all .2s;
    -moz-transition: all .2s;
    -webkit-transition: all .2s;
    -ms-transition: all .2s;
}

.logo a:hover {
    color: #e75967;
}

.call-us {
    font-size: 18px;
    text-align: right;
}

.call-us p {
    margin-top: 18px;
    padding-right: 50px;
}

.call-us p span {
    color: #888;
}

#navbar_area {
    float: right;
}

#navbar_area .container{
    width: auto;
}

.dropdown-menu {
    background: url(../images/pattern.jpg);
}

.dropdown-menu li{
    text-align: center;
}
/***** header end *****/


/***** main board start *****/

.main_board {
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

.inner-bg {
    padding: 15px 0 15px 0;
    overflow: auto;
    zoom: 1;
    background: url(../images/pattern-3.png);
    -moz-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    -webkit-box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
    box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .3) inset;
}

.main_board h2 {
    font-size: 40px;
    font-weight: 700;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

.main_board p {
    margin-top: 20px;
    font-size: 18px;
    line-height: 36px;
    text-shadow: 0 1px 7px rgba(0, 0, 0, .2);
}

#board_detail_show {
    margin: 0;
    padding: 0;
}

#close_detail_show {

}
.arrow_button {
    position: relative;
    display: block;
    margin-top: 90px;
    height:50px;
    width: 50px
}
.arrow_button:hover{
    cursor: pointer;
}
.detail_index {
    margin: 0;
    padding: 0;
    height: 300px;
}

.detail_life,
.detail_work,
.detail_tourist,
.detail_research {
    display: none;
    margin: 0;
    padding: 0;
    height: 300px;
    background: url(../images/pattern.jpg);
    color: #000000;
}
#close_detail_btn {
    margin-left: 5px;
    margin-right: 5px;
}
.detail_container {
    height: 250px;
    border: 1px solid;
    padding: 10px;
    text-align: left;
    overflow: hidden
}

.left_button {
    background: none repeat scroll 0 0 #222222;
    border: 3px solid #FFFFFF;
    border-radius: 23px;
    color: #FFFFFF;
    font-size: 60px;
    font-weight: 100;
    height: 40px;
    left: 15px;
    line-height: 30px;
    margin-top: -20px;
    opacity: 0.5;
    position: absolute;
    text-align: center;
    top: 40%;
    width: 40px;
}

.item {
    margin-top: 10px;
    text-shadow: 0 1px 5px rgba(0, 0, 0, .1);
}

.item .item_house,
.item .item_work,
.item .item_happy,
.item .item_research {
    display: inline-block;
    width: 160px;
    height: 140px;
    margin: 0 10px;
    padding-top: 20px;

    font-size: 18px;
    overflow: hidden;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    cursor: pointer;
}

.item .item_house {
    background: url(../images/backgrounds/house.jpg);
    background-size: 100% 100%;
}

.item .item_work {
    background: url(../images/backgrounds/work.jpg);
    background-size: 100% 100%;
}

.item .item_happy {
    background: url(../images/backgrounds/tourist.jpg);
    background-size: 100% 100%;
}

.item .item_research {
    background: url(../images/backgrounds/research.jpg);
    background-size: 100% 100%;
}

.item .total_count {
    display: inline-block;
    width: 100px;
    height: 30px;
    padding-top: 35px;
    font-size: 50px;
    overflow: hidden;
}

.item .total_count span {
    display: none
}

.item .rectangle {
    width: 160px;
    height: 140px;
    margin-top: 23px;
    overflow: hidden;

}

.item .circle {
    width: 160px;
    height: 160px;
    margin-top: -110px;
    -moz-border-radius: 80px;
    -webkit-border-radius: 80px;
    border-radius: 80px;
    background: #666666 url(../images/pattern-2.png);
    opacity: 0.8;
    filter: alpha(opacity=20); /* For IE8 and earlier */
}

.item .title {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
}

.item .title_posts {
    position: relative;
    bottom: -120px;
    color: #ffffff;
    font-size: larger;
    font-weight: bolder;
    display: none;
}

.item .item_house:hover,
.item .item_work:hover,
.item .item_happy:hover,
.item .item_research:hover {
    background: #e75967 url(../images/pattern-2.png);
    text-shadow: none;
}

.item .days,
.item .hours,
.item .minutes,
.item .seconds {
    font-size: 80px;
    line-height: 90px;
}

/***** foot *****/


.social {
    margin-top: 30px;
    padding-bottom: 30px;
    text-align: center;
}

.social a {
    display: inline-block;
    width: 48px;
    height: 48px;
    margin: 3px;
}

.social a.github {
    background: url(../images/social-icons/github.png);
}

.social a.cnblogs {
    background: url(../images/social-icons/cnblogs.png);
}

.social a.email {
    background: url(../images/social-icons/email.png);
}

.social a.resume {
    background: url(../images/social-icons/resume.png);
}

