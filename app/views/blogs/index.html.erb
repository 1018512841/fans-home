<%= stylesheet_link_tag 'blogs' %>

<div id="content" class="right_sidebar">
  <div class="inner" style="padding-bottom: 447px;">
    <div class="general_content">

      <div class="main_content">
        <div class="block_blog_1">
          <%= render partial: 'left_blog', collection: @blogs %>
          <div class="will-paginate"><%= will_paginate @blogs %></div>
        </div>
        <div class="line_2" style="margin:24px 0px 25px;"></div>
      </div>

      <div class="sidebar">
        <div class="separator" style="height:31px;"></div>
        <div class="block_popular_posts">
          <h4>热门文章</h4>
          <%= render partial: 'right_blog', collection: @hots %>
        </div>
        <div class="separator" style="height:31px;"></div>
        <div class="block_popular_stuff">
          <h4>推荐文章 </h4>
          <div class="content"><a href="#" class="view_all">全部视频</a></div>
          <%= render partial: 'recommend_blog', collection: @recommends %>
        </div>
        <div class="separator" style="height:31px;"></div>
      </div>
      
      <div class="clearboth"></div>
    </div>
  </div>
</div>