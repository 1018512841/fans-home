<div class="container">
  <div class="hero-unit" id="user_detail_container">
    <div class="page-header">
      <h2><%= I18n.t "user_detail_title" %>
        <small><%= I18n.t "user_detail_sub_title" %></small>
      </h2>
    </div>
    <p id="notice"><%= notice %></p>
    <table class="table table-striped table-bordered table-condensed table-hover">

      <tbody>
      <tr>
        <th><%= I18n.t "user_index_name" %></th>
        <th><%= @user.user_name %></th>
      </tr>
      <tr>
        <th><%= I18n.t "user_index_email" %></th>
        <th><%= @user.user_email %></th>
      </tr>
      </tbody>
    </table>

    <%= link_to I18n.t("edit_btn"), edit_user_path(@user), {id: "user_detail_edit_btn",
                                                            class: "btn btn-primary"} %>
    <%= link_to I18n.t("delete_btn"), user_path(@user), {id: "user_detail_delete_btn",
                                                         method: "delete",
                                                         data: {confirm: "Are you sure?"},
                                                         class: "btn btn-primary"} %>

    <% if current_is_admin? %>
        <%= link_to I18n.t("back_btn"), users_path, {class: "btn btn-primary"} %>
    <% end %>
  </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
    });
</script>