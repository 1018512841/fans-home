<div class="row user_new_edit_form">
  <div class="form-wrapper">
    <%= bootstrap_form_for(@user, :html => {class: "bootstrap-form"}) do |f| %>
        <%= render partial: 'admin/common/form_errors', locals: {errors: @user.errors} %>

        <%= f.text_field :user_name,
                         {:id => "user_name_field", :label => '用户名'} %>
        <%= f.text_field :user_email,
                         {:id => "user_email_field", :label => '邮箱'} %>
        <%= f.password_field :password,
                             {:id => "user_password_field", :label => '密码'} %>
        <%= f.password_field :password_confirmation,
                             {:id => "user_password_confirmation_field", :label => '密码'} %>
        <%= f.select :role, options_for_select({"Admin" => "amin", "Normal" => "user"},
                                               current_is_admin? ? 'admin' : 'user'),
                     {:disabled => !current_is_admin?, :label => '权限'} %>
        <%= f.submit(nil, {:class => "user_form_btn btn btn-default"}) %>

    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        fans_home.user_screen.user_new_edit_form_panel();
    });
</script>
