
<div class="container">
  <div class="hero-unit" id="user_list_container">
    <div class="page-header">
      <h2>Manager
        <small>User List</small>
      </h2>
    </div>
    <table id="user_table_list" class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
      </thead>
    </table>

    <%= link_to "New", "/users/new", {id: "user_table_create_btn",
                                      class: "btn btn-primary"} %>

    <%= button_tag "Delete", {id: "user_table_delete_btn",
                              class: "btn btn-primary",
                              disabled: true} %>

    <%= button_tag "Edit", {id: "user_table_edit_btn",
                            class: "btn btn-primary",
                            disabled: true} %>
    <div id="user_operation_message">
    </div>
  </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        fans_home.user_screen.init_user_index();
    });
</script>