<div class="container life_post_index_wrapper">
  <h1 class="text-center"><%= I18n.t "life_post.index_title" %></h1>
  <ul class="thumbnails">
    <% @life_posts.each do |life_post| %>
        <%= render :partial => "life_post_box", :locals => {:life_post => life_post} %>
    <% end %>
  </ul>
  <%= will_paginate @life_posts, {previous_label: "Pre", next_label: "Next", :style => 'color:blue'} %>
  <% if current_is_admin? %>
      <%= link_to(I18n.t("new_btn"), new_life_post_path, {class: " btn btn-primary"}) %>
  <% end %>

</div>

