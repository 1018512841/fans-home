<div class="container">

  <h1>Listing life posts</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Operation</th>
    </tr>
    </thead>

    <tbody>
    <% @life_posts.each do |life_post| %>
        <tr>
          <td><%= link_to life_post.title, life_post %>    </td>
          <td><%= link_to 'Edit', edit_life_post_path(life_post) %> |
            <%= link_to 'Destroy', life_post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>

    </tbody>
  </table>
  <%= will_paginate @life_posts, {previous_label: "Pre", next_label: "Next", :style => 'color:blue'} %>
  <br>
  <%= link_to 'New Life post', new_life_post_path %>
</div>

