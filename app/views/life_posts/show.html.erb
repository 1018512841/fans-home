<div class="container">
  <div class="hero-unit" id="life_detail_container" style="border: 1px solid">

    <p id="notice"><%= notice %></p>
      <div class="row text-center">
        <%= link_to(I18n.t("previous_page"), @life_post.previous_one_path,
                    {class: "btn",
                     style: "float:left",
                     disabled: @life_post.previous_one.nil?}) %>
        <span class="life_detail_page_title" style="font-size: xx-large"> <%= @life_post.title %></span>
        <%= link_to(I18n.t("next_page"), @life_post.next_one_path,
                    {class: "btn",
                     style: "float:right",
                     disabled: @life_post.next_one.nil?}) %>
      </div>

    <p class="lead text-center"> <%= @life_post.body %></p>

    <p class="text-center"> <%= image_tag @life_post.avatar.url, {class: "img-rounded img-polaroid"} %></p>

    <div class="row">
      <div class="span7 offset1">
        <div class="row">
          <% if current_is_admin? %>
              <%= link_to "编辑", edit_life_post_path(@life_post), {id: "life_detail_edit_btn",
                                                                                class: "btn"} %>
              <%= link_to "删除", life_post_path(@life_post), {id: "life_detail_delete_btn",
                                                                             method: "delete",
                                                                             data: {confirm: "Are you sure?"},
                                                                             class: "btn"} %>
          <% end %>
          <%= link_to "返回", life_posts_path, {class: "btn"} %>
        </div>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
    });
</script>
