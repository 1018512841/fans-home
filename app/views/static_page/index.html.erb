<!-- main board -->
<div class="main_board">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div id="board_detail_show" class="span12">
          <div class="detail_index">
            <%= render 'static_page/default_board' %>
          </div>
          <div class="detail_life hero-unit">
            <%= render 'static_page/item_detail' %>
          </div>
          <div class="detail_work hero-unit">
            <%= render 'static_page/item_detail' %>
          </div>
          <div class="detail_tourist hero-unit">
            <%= render 'static_page/item_detail' %>
          </div>
          <div class="detail_research hero-unit">
            <%= render 'static_page/item_detail' %>
          </div>
        </div>
      </div>
      <div class="item">
        <div class="item_house" data-detail_panel="detail_life">
          <div class="total_count"><span>33</span></div>
          <div class="rectangle">
            <div class="circle">
              <div class="title">Life</div>
              <div class="title_posts">Posts</div>
            </div>
          </div>
        </div>
        <div class="item_work" data-detail_panel="detail_work">
          <div class="total_count"><span>33</span></div>
          <div class="rectangle">
            <div class="circle">
              <div class="title">Work</div>
              <div class="title_posts">Posts</div>
            </div>
          </div>
        </div>
        <div class="item_happy" data-detail_panel="detail_tourist">
          <div class="total_count"><span>33</span></div>
          <div class="rectangle">
            <div class="circle">
              <div class="title">Tourist</div>
              <div class="title_posts">Posts</div>
            </div>
          </div>
        </div>
        <div class="item_research" data-detail_panel="detail_research">
          <div class="total_count"><span>33</span></div>
          <div class="rectangle">
            <div class="circle">
              <div class="title">Research</div>
              <div class="title_posts">Posts</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "static_page/foot" %>
<script type="text/javascript">
    $(document).ready(function () {
        fans_home.dashboard.init_dashboard();
    });
</script>