<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= link_to image_tag(tourist_post.image_cover_url), tourist_post %>
    <div class="caption">
      <h3 class="image_index_title"><%= link_to tourist_post.city, tourist_post %></h3>

      <p class="image_index_body"><%= link_to tourist_post.description, tourist_post %></p>
      <% if current_is_admin? %>
          <p><%= link_to "编辑", edit_tourist_post_path(tourist_post), class: "btn btn-default" %>
            <%= link_to "删除", tourist_post, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default" %></p>
      <% end %>
    </div>
  </div>
</div>
