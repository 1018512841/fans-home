<div id="wrapper" class="row">
  <div id="content" class="col-sm-8">
    <div class="page-header">
      <h1 class="detail-title">
        <%= "管理" %>
        <small><%= "用户列表" %>
        </small>
      </h1>
    </div>
    <p id="notice" class="user_operation_message"><%= notice %></p>
    <table id="user_table_list" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th><%= "用户名" %></th>
        <th><%= "邮箱" %></th>
      </tr>
      </thead>
    </table>
  </div>
  <%= right_operation_tag do %>
      <%= link_to "新建", "/users/new", {id: "user_table_create_btn",
                                                    class: "btn btn-primary btn-lg btn-block"} %>

      <%= button_tag "删除", {id: "user_table_delete_btn",
                                            class: "btn btn-primary btn-lg btn-block",
                                            disabled: true} %>

      <%= button_tag "编辑", {id: "user_table_edit_btn",
                                          class: "btn btn-primary btn-lg btn-block",
                                          disabled: true} %>
  <% end %>
</div>

<% content_for :script do %>
    <script type="text/javascript">
        $(document).ready(function () {
            fans_home.user_screen.init_user_index();
        });
    </script>
<% end %>
