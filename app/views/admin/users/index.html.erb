
<div class="container">
  <div class="hero-unit" id="user_list_container">
    <div class="page-header">
      <h2><%= I18n.t "user_index_title" %>
        <small><%= I18n.t "user_index_sub_title" %></small>
      </h2>
    </div>
    <p id="notice" class="user_operation_message"><%= notice %></p>
    <table id="user_table_list" class= table table-striped table-bordered table-condensed table-hover" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th><%= I18n.t "user_index_name" %></th>
        <th><%= I18n.t "user_index_email" %></th>
      </tr>
      </thead>
    </table>

    <%= link_to I18n.t("new_btn"), "/users/new", {id: "user_table_create_btn",
                                                  class: "btn btn-default"} %>

    <%= button_tag I18n.t("delete_btn"), {id: "user_table_delete_btn",
                                          class: "btn btn-default",
                                          disabled: true} %>

    <%= button_tag I18n.t("edit_btn"), {id: "user_table_edit_btn",
                                        class: "btn btn-default",
                                        disabled: true} %>
  </div>
</div>

<% content_for :script do %>
    <script type="text/javascript">
        $(document).ready(function () {
            fans_home.user_screen.init_user_index();
        });
    </script>
<% end %>
