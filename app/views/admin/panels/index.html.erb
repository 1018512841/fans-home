<h1 class="page-header"><%= '设置首页的欢迎信息' %></h1>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-9">
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <strong>信息!</strong> 这是展示在首页滚动banner中的信息
    </div>
  </div>
  <div class="col-xs-6 col-md-3">
    <%= link_to '新建一个pannel', new_admin_panel_path, class: 'btn btn-success pull-right' %>
  </div>
</div>


<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
  <tr>
    <th>标题</th>
    <th>描述</th>
    <th>权重</th>
    <th>创建时间</th>
    <th>操作</th>
  </tr>
  </thead>

  <tbody>
  <% @admin_panels.each do |admin_panel| %>
      <tr>
        <td><%= admin_panel.title %></td>
        <td><%= admin_panel.desc %></td>
        <td><%= admin_panel.weight %></td>
        <td><%= admin_time admin_panel.created_at %></td>
        <td>
          <%= link_to '显示详情', admin_panel, class: 'btn btn-info' %>
          <%= link_to '编辑', edit_admin_panel_path(admin_panel), class: 'btn btn-info' %>
          <%= link_to '删除', admin_panel, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-info' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @admin_panels %>

